
@model List<service>

<section id="portfolio" class="portfolio section">
    <div class="container aos-init aos-animate" data-aos="fade-up">

        <div class="section-title">
            <h2>الاعمال السابقه</h2>
            <p>تصفح اعمالنا السابقه</p>
        </div>

        <div class="row aos-init aos-animate" data-aos="fade-up" data-aos-delay="100">
            <div class="col-lg-12 d-flex justify-content-center">
                <ul id="portfolio-flters">
                    <li data-filter="*" class="filter-active">الكل</li>
                    @foreach (var item in Model)
                    {
                        <li data-filter=".filter-@item.id">@item.serviceName</li>
                    }
                    
                    
                </ul>
            </div>
        </div>

        <div class="row portfolio-container aos-init aos-animate" data-aos="fade-up" data-aos-delay="200" style="position: relative; height: 927.549px;">

            @foreach (var item1 in Model)
            {
                @foreach (var serv in item1.jobsFinisheds)
                {
                    <div class="col-lg-4 col-md-6 portfolio-item filter-@serv.serviceId" style="position: absolute; left: 0px; top: 0px;">
                        <div class="portfolio-wrap">
                            <img src="~/images/@serv.photo[0].FileName" class="img-fluid">
                            <div class="portfolio-info">
                                <h4>@serv.jobName</h4>
                                <p>@serv.location</p>
                                <div class="portfolio-links">
                                    <a href="~/images/@serv.photo[0].FileName" data-gallery="portfolioGallery" class="portfolio-lightbox" title="تكبير الصورة"><i class="bx bx-plus"></i></a>
                                    <a href="/Home/JobDetails/@serv.id" title="تفاصيل أكثر"><i class="bx bx-link"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                
            }

        </div>

    </div>
</section>