

@model message

<section id="contact" class="contact section">
    <div class="container aos-init aos-animate" data-aos="fade-up">

        <div class="section-title">
            <h2>التواصل</h2>
            <p>تواصل معنا!</p>
        </div>
        <div class="row mt-5">

            <div class="col-lg-4">
                <div class="info">
                    <div class="address">
                        <i class="bi bi-geo-alt"></i>
                        <h4>العنوان:</h4>
                        <p>A108 Adam Street, New York, NY 535022</p>
                    </div>

                    <div class="email">
                        <i class="bi bi-envelope"></i>
                        <h4>البريد الالكتروني:</h4>
                        <p>info@example.com</p>
                    </div>

                    <div class="phone">
                        <i class="bi bi-phone"></i>
                        <h4>الهاتف:</h4>
                        <p>01144569956</p>
                    </div>

                </div>

            </div>

            <div class="col-lg-8 mt-5 mt-lg-0">

                <form asp-action="SaveContact" class="form-forSaving">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <input type="text" asp-for="name" name="name" class="form-control" id="name" placeholder="اسمك" required>
                            <span asp-validation-for="name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group mt-3 mt-md-0">
                            <input type="email" asp-for="email" class="form-control" name="email" id="email" placeholder="بريدك الالكتروني" required>
                            <span asp-validation-for="email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <textarea class="form-control" asp-for="Message" name="message" rows="5" placeholder="الرساله" required></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    @* <div class="my-3">
                        <div class="loading">Loading</div>
                        <div class="error-message"></div>
                        <div class="sent-message">Your message has been sent. Thank you!</div>
                    </div> *@
                    <div class="text-center"><button type="submit">ارسال الرساله</button></div>
                </form>

            </div>

        </div>

    </div>
</section>

<partial name="_ValidationScriptsPartial" />
