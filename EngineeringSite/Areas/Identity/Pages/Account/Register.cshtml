@page
@model RegisterModel



<div class="container">
    <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">
                    <div class="d-flex justify-content-center py-4">
                        <a href="/Home/Index" class="logo d-flex align-items-center w-auto">
                            <img src="~/assets/img/engineer/logo22.png" alt="">
                            <span class="d-none d-lg-block">مسعود للأستشارات الهندسية</span>
                        </a>
                    </div><!-- End Logo -->
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="pt-4 pb-2">
                                <h5 class="card-title text-center pb-0 fs-4">إنشاء حساب</h5>
                                <p class="text-center small">أدخل تفاصيلك الشخصية لإنشاء حساب</p>
                            </div>
                            <form class="row g-3 needs-validation" novalidate="" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <div class="col-12">
                                    <label for="yourEmail" class="form-label">بريدك الإلكتروني</label>
                                    <div class="input-group has-validation">
                                        <span class="input-group-text" id="inputGroupPrepend">@@</span>
                                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                                    </div>
                                    <div class="invalid-feedback">من فضلك، أدخل عنوان بريد إلكتروني صالح!</div>
                                </div>
                                <div class="col-12">
                                    <label for="yourPassword" class="form-label">كلمة السر</label>
                                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                                    <div class="invalid-feedback">من فضلك، أدخل كلمة السر!</div>
                                </div>
                                <div class="col-12">
                                    <label for="yourPassword" class="form-label">تأكيد كلمة السر</label>
                                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                                    <div class="invalid-feedback">من فضلك، أدخل تأكيد كلمة السر!</div>
                                </div>
                                <div class="col-12">
                                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">إنشاء حساب</button>
                                </div>
                                <div class="col-12">
                                    <p class="small mb-0">هل لديك حساب بالفعل؟ <a href="/Identity/Account/Login">تسجيل الدخول</a></p>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="credits">
                        <!-- جميع الروابط في التذييل يجب أن تبقى سليمة. -->
                        <!-- يمكنك حذف الروابط فقط إذا قمت بشراء النسخة الاحترافية. -->
                        <!-- معلومات الترخيص: https://bootstrapmade.com/license/ -->
                        <!-- شراء النسخة الاحترافية مع نموذج PHP/AJAX للاتصال العمل: https://bootstrapmade.com/nice-admin-bootstrap-admin-html-template/ -->
                        Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
