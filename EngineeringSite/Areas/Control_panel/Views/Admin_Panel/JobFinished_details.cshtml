@* heading *@
@using EngineeringSite.Models;
@model jobsFinished

<div class="card  col-8" style="margin-bottom: 70px;">
    <div class="card-body">
        <h5 class="card-title">تفاصيل المشروع</h5>

        <!-- General Form Elements -->
        <form>
            <div class="row mb-3">
                <label for="imageUpload" class="col-sm-2 col-form-label">الصور</label>
                <div class="col-sm-10">
                    <div class="card">
                        <div class="card-body" style="padding-top: 20px;">
                            <!-- Slides with indicators -->
                            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                                <div class="carousel-indicators" style="direction: ltr;">
                                    @for(int i = 0; i<Model.photo.Count; i++)
                                    {
                                        if(i == 0)
                                        {
                                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i" class="active" aria-label="Slide 1" aria-current="true"></button>
                                        }
                                        else
                                        {
                                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i" class=""></button>
                                        }
                                    }
                                </div>
                                <div class="carousel-inner">
                                    @for (int i = 0; i < Model.photo.Count; i++)
                                    {
                                        if (i == 0)
                                        {
                                            <div class="carousel-item active">
                                                <img style="width:100% !important;" src="/images/@Model.photo[i].FileName" class="d-block w-100" alt="...">
                                            </div>
                                        }
                                        else
                                        {
                                        <div class="carousel-item">
                                                <img style="width:100% !important;" src="/images/@Model.photo[i].FileName" class="d-block w-100" alt="...">
                                        </div>
                                        }
                                    }
                                </div>
                                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Next</span>
                                </button> 

                            </div><!-- End Slides with indicators -->
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <label for="projectName" class="col-sm-2 col-form-label">اسم المشروع</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="jobName" disabled>
                </div>
            </div>
            <div class="row mb-3">
                <label for="description" class="col-sm-2 col-form-label">الشرح</label>
                <div class="col-sm-10">
                    <textarea class="form-control" asp-for="description" style="height: 100px;" disabled></textarea>
                </div>
            </div>
            <div class="row mb-3">
                <label for="location" class="col-sm-2 col-form-label">الموقع</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="location" disabled>
                </div>
            </div>
            <div class="row mb-3">
                <label for="date" class="col-sm-2 col-form-label">التاريخ</label>
                <div class="col-sm-10">
                    <input type="date" class="form-control" asp-for="date" disabled>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">الخدمة</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="service.serviceName" disabled>
                </div>
            </div>
        </form>

        <!-- End General Form Elements -->

    </div>
</div>




