@* heading *@

@model message

<div class="card  col-8" style="margin-bottom: 70px;">
    <div class="card-body">
        <h5 class="card-title">تفاصيل الرسالة</h5>

        <!-- General Form Elements -->
        <form>
            <div class="row mb-3">
                <label for="projectName" class="col-sm-2 col-form-label">الراسل</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="name" disabled>
                </div>
            </div>
            <div class="row mb-3">
                <label for="projectName" class="col-sm-2 col-form-label">البريد الاكتروني للراسل</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="email" disabled>
                </div>
            </div>
            <div class="row mb-3">
                <label for="date" class="col-sm-2 col-form-label">تاريخ الرسالة</label>
                <div class="col-sm-10">
                    <input type="date" class="form-control" asp-for="time" disabled>
                </div>
            </div>
            <div class="row mb-3">
                <label for="description" class="col-sm-2 col-form-label">الرسالة</label>
                <div class="col-sm-10">
                    <textarea class="form-control" asp-for="Message" style="height: 100px;" disabled></textarea>
                </div>
            </div>
        </form>

        <!-- End General Form Elements -->

    </div>
</div>




