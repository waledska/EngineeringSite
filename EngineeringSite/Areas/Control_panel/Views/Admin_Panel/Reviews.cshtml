@model List<review>


<table class="table table-hover">
    <thead>
        <tr class="row-cols-3 table-warning">
            <th class="col-2" scope="col">الراسل</th>
            <th class="col-2" scope="col"> الوظيفه</th>
            <th class="col-6" scope="col">التقييم</th>
            <th style="text-align: center;" class="col-2" scope="col">عرض التقييم</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="font-size: 14px;">@item.name</td>
                <td>@item.job</td>
                <td style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width:50px;">
                    @item.comment
                </td>
                <td class="d-flex justify-content-center" style="text-align: center;">
                    @* btn-outline-primary *@
                    <a class="btn @(item.showReview?"btn-primary" : "btn-outline-primary") btn-sm m-1" href="@Url.Action("RevVisibility", "Admin_Panel", new{ id = item.id, area ="Control_panel" })">اظهار</a>
                </td>
            </tr>
        }
    </tbody>
</table>
