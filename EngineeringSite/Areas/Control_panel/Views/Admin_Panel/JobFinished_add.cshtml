@* heading *@

@model jobsFinished

<div class="card  col-8" style="margin-bottom: 70px;">
    <div class="card-body">
        <h5 class="card-title">اضافه مشروع جديد</h5>

        <!-- General Form Elements -->
        <form asp-action="addNewProject" enctype="multipart/form-data">
            <div class="row mb-3">
                <label for="projectName" class="col-sm-2 col-form-label">اسم المشروع</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="jobName" required>
                </div>
            </div>
            <div class="row mb-3">
                <label for="description" class="col-sm-2 col-form-label">الشرح</label>
                <div class="col-sm-10">
                    <textarea class="form-control" asp-for="description" style="height: 100px;"></textarea>
                </div>
            </div>
            <div class="row mb-3">
                <label for="location" class="col-sm-2 col-form-label">الموقع</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="location">
                </div>
            </div>
            <div class="row mb-3">
                <label for="date" class="col-sm-2 col-form-label">التاريخ</label>
                <div class="col-sm-10">
                    <input type="date" class="form-control" asp-for="date">
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">الخدمة</label>
                <div class="col-sm-10">
                    @* <select class="form-control" id="roleDropdown" asp-for="serviceId">
                        @foreach (var item in ViewBag.services)
                        {
                            <option value="@item.id">@item.serviceName</option>
                        }
                        <
                    </select>> *@
                </div>
            </div>
            <div class="row mb-3">
                <label for="imageUpload" class="col-sm-2 col-form-label">رفع الصور</label>
                <div class="col-sm-10">
                    <input class="form-control" type="file" asp-for="formFile" id="fileInput" multiple>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">اضافة المشروع</button>
                </div>
            </div>

        </form>

        <!-- End General Form Elements -->

    </div>
</div>
