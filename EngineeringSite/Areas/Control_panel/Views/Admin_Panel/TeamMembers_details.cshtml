@* heading *@

@using EngineeringSite.Models;
@model TeamMember

<div class="card  col-8" style="margin-bottom: 70px;">
    <div class="card-body">
        <h5 class="card-title">بيانات العضو</h5>

        <!-- General Form Elements -->
        <form>
            <div class="row mb-3">
                <label for="imageUpload" class="col-sm-2 col-form-label">الصورة</label>
                <img style="max-width: 200px; border: 2px solid #ccc; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);"
                     src="~/images/@Model.photo"
                     class="rounded"
                     alt="...">
            </div>
            <div class="row mb-3">
                <label for="projectName" class="col-sm-2 col-form-label">الاسم</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="name" disabled>
                </div>
            </div>
            <div class="row mb-3">
                <label for="projectName" class="col-sm-2 col-form-label">الوظيفة</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="job" disabled>
                </div>
            </div>
            <div class="row mb-3">
                <label for="location" class="col-sm-2 col-form-label">لينك لينكد ان</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="linkedinLink" disabled>
                </div>
            </div>
            <div class="row mb-3">
                <label for="location" class="col-sm-2 col-form-label">لينك الفيسبوك</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" asp-for="facebookLink" disabled>
                </div>
            </div>
        </form>

        <!-- End General Form Elements -->

    </div>
</div>




